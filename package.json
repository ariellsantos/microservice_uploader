{
  "name": "microservice_uploader",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "tslint src/**/*.ts{,x}",
    "test:integration": "npm test -- --group=integration",
    "test:unit": "npm test -- --group=unit",
    "test:coverage": "npm test -- --coverage",
    "test": "NODE_ENV=test jest --verbose",
    "test:features": "NODE_ENV=test node ./node_modules/@cucumber/cucumber/bin/cucumber-js",
    "dev": "NODE_ENV=test ts-node-dev --ignore-watch node_modules ./src/Application/app.ts",
    "prepare": "husky install",
    "build": "npm run build:clean && npm run build:tsc",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:clean": "rm -r dist; exit 0",
    "start": "NODE_ENV=production node dist/src/Application/app"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^10.0.1",
    "@cucumber/pretty-formatter": "^1.0.0",
    "@types/convict": "^6.1.4",
    "@types/express": "^4.17.19",
    "@types/express-promise-router": "^3.0.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.6",
    "@types/supertest": "^2.0.15",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-runner-groups": "^2.2.0",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.3.0",
    "awilix": "^9.0.0",
    "axios": "^1.5.1",
    "convict": "^6.2.4",
    "express": "^4.18.2",
    "express-promise-router": "^4.1.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "node-dependency-injection": "^3.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "prettier --write ",
      "tslint --fix"
    ]
  }
}
